@{
    ViewData["Title"] = "Order Completed";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill display-1 text-success"></i>
                </div>
                <h1 class="display-4 text-success mb-3">Order Completed!</h1>
                <p class="lead text-muted">
                    Thank you for your purchase. Your order has been successfully processed.
                </p>
            </div>

            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-success text-white text-center py-4">
                    <h4 class="mb-0">
                        <i class="bi bi-receipt me-2"></i>
                        Order Confirmation
                    </h4>
                </div>
                <div class="card-body p-5">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Order Details</h6>
                            <p class="mb-2">
                                <strong>Order Date:</strong> @DateTime.Now.ToString("dd MMMM yyyy")
                            </p>
                            <p class="mb-2">
                                <strong>Order Time:</strong> @DateTime.Now.ToString("hh:mm tt")
                            </p>
                            <p class="mb-0">
                                <strong>Status:</strong> 
                                <span class="badge bg-success">Confirmed</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Customer Information</h6>
                            <p class="mb-2">
                                <strong>Name:</strong> @User.Identity.Name
                            </p>
                            <p class="mb-0">
                                <strong>Email:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-info mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        What's Next?
                    </h5>
                </div>
              
            </div>

            <div class="text-center">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a asp-action="Index" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-list-check me-2"></i>
                            View My Orders
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-primary btn-lg w-100">
                            <i class="bi bi-film me-2"></i>
                            Browse More Movies
                        </a>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>

<div class="position-fixed top-0 start-0 w-100 h-100 pointer-events-none" style="z-index: -1;">
    <div class="confetti"></div>
</div>


<script>
    // Optional: Auto-redirect to orders page after 30 seconds
    // setTimeout(function() {
    //     window.location.href = '@Url.Action("Index", "Order")';
    // }, 30000);
    
    // Show success toast
    if (typeof(bootstrap) !== 'undefined') {
        const toastHTML = `
            <div class="toast-container position-fixed top-0 end-0 p-3">
                <div class="toast show" role="alert">
                    <div class="toast-header bg-success text-white">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <strong class="me-auto">Success</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        Your order has been placed successfully!
                    </div>
                </div>
            </div>
        `;
        document.body.insertAdjacentHTML('beforeend', toastHTML);
        
        // Auto-hide toast after 5 seconds
        setTimeout(() => {
            const toast = document.querySelector('.toast');
            if (toast) {
                toast.remove();
            }
        }, 5000);
    }
</script>
